{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "python",
            "name": "python tmpl",
            "request": "launch",
            "program": "app.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/dev/src/python_tmpl",
            "args": ["dev"],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/dev/src/python_tmpl;${env:PYTHONPATH}",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            }
        }
    ]
}
